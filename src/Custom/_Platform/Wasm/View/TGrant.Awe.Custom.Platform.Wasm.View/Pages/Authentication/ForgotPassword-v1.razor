@page "/pages/authentication/forgot-password-v1"
@using TGrant.Awe.Custom.Platform.Wasm.View.Shared
@layout EmptyLayout

<MRow Class="mt-16 pt-12">
    <_Blazor.Starter.Pages.Authentication.Components.ForgotPassword SendResetClick="SendRest">
    </_Blazor.Starter.Pages.Authentication.Components.ForgotPassword>
</MRow>

@code {
    [Inject]
    protected NavigationManager Navigation { get; set; } = default!;

    private void SendRest(MouseEventArgs args)
    {
        Navigation.NavigateTo(Navigation.BaseUri + "pages/authentication/reset-password-v1");
    }
}